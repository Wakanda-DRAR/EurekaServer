services:
  eureka-server:
    image: eureka-server
    container_name: eureka-server
    ports:
      - "8761:8761"
    networks:
      - eureka-network


  gestion-agua:
    image: gestion-agua
    container_name: gestion-agua
    ports:
      - "8082:8082"
    environment:
      - EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://eureka-server:8761/eureka/
    depends_on:
      - eureka-server
      - agua_db
    networks:
      - eureka-network
      
      
 gestion-residuos:
    image: gestion-residuos
    container_name: gestion-residuos
    ports:
      - "8080:8080"
    environment:
      - EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://eureka-server:8761/eureka/
    depends_on:
      - eureka-server
      - gestion_residuos_database
    networks:
      - eureka-network

  agua_db:
    image: mysql:latest
    container_name: agua_db
    environment:
      - MYSQL_ROOT_PASSWORD=admin
      - MYSQL_DATABASE=agua_db
      - MYSQL_USER=admin
      - MYSQL_PASSWORD=admin
    ports:
      - "3308:3306"
      - gestion_residuos_database
    networks:
      - eureka-network

  gestion_residuos_database:
    image: mysql:latest
    container_name: gestion_residuos_database
    environment:
     - MYSQL_ROOT_PASSWORD=admin
     - MYSQL_DATABASE=gestion_residuos_db
     - MYSQL_USER=admin
     - MYSQL_PASSWORD=admin
    ports:
      - "3307:3306"
    networks:
      - eureka-network

  gestion-energia:
      image: gestion-energia
      container_name: gestion-energia
      ports:
        - "8083:8083"
      environment:
        - EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://eureka-server:8761/eureka/
      depends_on:
        - eureka-server
        - gestion_energia_database
      networks:
        - eureka-network


  gestion_energia_database:
    image: mysql:latest
    container_name: gestion_energia_database
    environment:
      - MYSQL_ROOT_PASSWORD=admin
      - MYSQL_DATABASE=gestion_energia_db
      - MYSQL_USER=admin
      - MYSQL_PASSWORD=admin
    ports:
      - "3310:3306"
    networks:
      - eureka-network

networks:
  eureka-network:
    name: eureka-network